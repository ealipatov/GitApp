<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_user_padding_top"
    android:paddingBottom="@dimen/item_user_padding_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_avatar_image_view"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:contentDescription="@string/user_avatar" />

    <TextView
        android:id="@+id/user_login_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_user_text_view_padding"

        app:layout_constraintStart_toEndOf="@id/user_avatar_image_view"
        app:layout_constraintTop_toTopOf="@id/user_avatar_image_view"
        app:layout_constraintBottom_toTopOf="@id/user_id_text_view"

        android:textStyle="bold"
        android:textSize="@dimen/item_user_login_text_size"/>

    <TextView
        android:id="@+id/user_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"

        app:layout_constraintStart_toStartOf="@id/user_login_text_view"
        app:layout_constraintTop_toBottomOf="@id/user_login_text_view"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar_image_view"

        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>