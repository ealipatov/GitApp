<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/item_user_padding_top"
    android:paddingBottom="@dimen/item_user_padding_bottom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_profile_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/user_avatar_image_view"
            android:layout_width="@dimen/avatar_profile_width"
            android:layout_height="@dimen/avatar_profile_height"

            android:contentDescription="@string/user_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_user_text_view_padding"

            android:textSize="@dimen/item_user_login_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/user_type_text_view"

            app:layout_constraintStart_toEndOf="@id/user_avatar_image_view"
            app:layout_constraintTop_toTopOf="@id/user_avatar_image_view" />

        <TextView
            android:id="@+id/user_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_user_text_view_padding"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar_image_view"
            app:layout_constraintStart_toStartOf="@id/user_login_text_view"

            app:layout_constraintTop_toBottomOf="@id/user_login_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>